<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="#0B0C10">

        <TextView
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:fontFamily="serif"
            android:textColor="#66FCF1"
            android:text="Personal Information"
            android:textAlignment="center"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:text="This information is used to create more personalized, accurate goals to maximze your success."
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:fontFamily="serif"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="70dp"
            android:layout_margin="3dp"
            android:hint="Name (First, Last)"
            android:background="@drawable/personal_info"
            android:padding="25dp"
            android:textColorHint="#45A29E"
            android:textColor="#45A29E"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/age"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="70dp"
            android:layout_margin="3dp"
            android:hint="Age"
            android:background="@drawable/personal_info"
            android:padding="25dp"
            android:textColorHint="#45A29E"
            android:textColor="#45A29E"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/sex"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="70dp"
            android:layout_margin="3dp"
            android:hint="Sex (M/F)"
            android:background="@drawable/personal_info"
            android:padding="25dp"
            android:textColorHint="#45A29E"
            android:textColor="#45A29E"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/height"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="70dp"
            android:layout_margin="3dp"
            android:hint="Height (inches)"
            android:background="@drawable/personal_info"
            android:padding="25dp"
            android:textColorHint="#45A29E"
            android:textColor="#45A29E"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/weight"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="70dp"
            android:layout_margin="3dp"
            android:hint="Weight (pounds)"
            android:background="@drawable/personal_info"
            android:padding="25dp"
            android:textColorHint="#45A29E"
            android:textColor="#45A29E"
            android:textSize="16dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/update"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/buttonstyle"
                android:fontFamily="serif"
                android:onClick="redirect"
                android:text="Update Info"
                android:textAlignment="center"
                android:textSize="18dp" />

            <Button
                android:id="@+id/request"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/buttonstyle"
                android:fontFamily="serif"
                android:onClick="redirect"
                android:text="Get Info"
                android:textAlignment="center"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="585dp"
        android:gravity="bottom"
        android:layout_height="200dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:gravity="bottom"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="25dp"
                android:background="@drawable/ic_home_black_24imagedp"
                android:drawableTop="@drawable/ic_home_black_24dp"
                android:onClick="redirect"
                android:paddingRight="25dp" />

            <ImageButton
                android:id="@+id/info"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="25dp"
                android:background="@drawable/ic_face_black_24imagedp"
                android:fontFamily="serif"
                android:onClick="redirect"
                android:text="Info"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/fitness"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="25dp"
                android:background="@drawable/ic_directions_run_image_24dp"
                android:fontFamily="serif"
                android:onClick="redirect"
                android:text="Fitness"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/nutrition"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="25dp"
                android:background="@drawable/ic_cake_black_24dp"
                android:fontFamily="serif"
                android:onClick="redirect"
                android:text="Nutrition"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="bottom"
            android:layout_marginTop="98dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:fontFamily="serif"
                android:text="Home"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="22dp"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:text="Info"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:textSize="22dp"
                android:fontFamily="serif"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:textSize="22dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:text="Fitness"
                android:fontFamily="serif"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:text="Nutrition"
                android:textColor="@android:color/black"
                android:textSize="22dp"
                android:textAlignment="center"
                android:fontFamily="serif"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>

