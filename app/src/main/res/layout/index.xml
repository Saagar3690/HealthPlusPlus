<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="#0B0C10">

        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right">

            <Button
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:onClick="logOut"
                android:text="Logout"
                android:textColor="#66FCF1"
                android:textSize="12sp" />
        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:fontFamily="serif"
            android:textColor="@android:color/white"
            android:text="Welcome to HealthPlusPlus"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:text="Live Healthy"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24dp"
            android:textStyle="italic" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="175dp"
        android:layout_height="350dp">

        <TextView
            android:text="Calorie Excess:"
            android:textSize="24dp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/def"
            android:textSize="24dp"
            android:textColor="@android:color/black"
            android:text="0"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/comment"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="24dp"/>

        <TextView
            android:id="@+id/sug"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="24dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="555dp"
        android:gravity="bottom"
        android:layout_height="200dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="25dp"
                android:background="@drawable/ic_home_black_24dp"
                android:drawableTop="@drawable/ic_home_black_24dp"
                android:onClick="redirect"
                android:paddingRight="25dp" />

            <ImageButton
                android:id="@+id/info"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="25dp"
                android:background="@drawable/ic_face_black_24dp"
                android:fontFamily="serif"
                android:onClick="redirect"
                android:text="Info"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/fitness"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="25dp"
                android:background="@drawable/ic_directions_run_image_24dp"
                android:fontFamily="serif"
                android:onClick="redirect"
                android:text="Fitness"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/nutrition"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="25dp"
                android:background="@drawable/ic_cake_black_24dp"
                android:fontFamily="serif"
                android:onClick="redirect"
                android:text="Nutrition"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="108dp"
            android:gravity="bottom"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:fontFamily="serif"
                android:text="Home"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="22dp"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:text="Info"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:textSize="22dp"
                android:fontFamily="serif"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:textSize="22dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:text="Fitness"
                android:fontFamily="serif"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:text="Nutrition"
                android:textColor="@android:color/black"
                android:textSize="22dp"
                android:textAlignment="center"
                android:fontFamily="serif"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>

