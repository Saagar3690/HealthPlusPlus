<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0B0C10"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:fontFamily="serif"
            android:text="Fitness"
            android:textAlignment="center"
            android:textColor="#66FCF1"
            android:textSize="30sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="319dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:text="Enter Exercise:"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/enteredText"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="352dp"
            android:layout_height="55dp"
            android:hint="Excercise in terms of hours" />

        <Button
            android:id="@+id/enter"
            android:layout_gravity="center"
            android:background="@drawable/buttonstyle"
            android:layout_width="96dp"
            android:layout_height="48dp"
            android:onClick="enter"
            android:text="Submit" />

        <ListView
            android:id="@+id/exerciseList"
            android:layout_width="367dp"
            android:layout_height="328dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="555dp"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="30dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="25dp"
                android:background="@drawable/ic_home_black_24imagedp"
                android:drawableTop="@drawable/ic_home_black_24dp"
                android:onClick="redirect"
                android:paddingRight="25dp" />

            <ImageButton
                android:id="@+id/info"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="25dp"
                android:background="@drawable/ic_face_black_24dp"
                android:fontFamily="serif"
                android:onClick="redirect"
                android:text="Info"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/fitness"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="25dp"
                android:background="@drawable/ic_directions_run_black_24sgsgdp"
                android:onClick="redirect"
                android:text="Fitness"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/nutrition"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="25dp"
                android:background="@drawable/ic_cake_black_24dp"
                android:fontFamily="serif"
                android:onClick="redirect"
                android:text="Nutrition"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="108dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:fontFamily="serif"
                android:text="Home"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="22dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:fontFamily="serif"
                android:text="Info"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="22dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:fontFamily="serif"
                android:text="Fitness"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="22dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:fontFamily="serif"
                android:text="Nutrition"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="22dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>

